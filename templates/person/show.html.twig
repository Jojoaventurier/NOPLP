{% extends 'base.html.twig' %}

{% block title %}{{ person.name }}{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">

        <a href="{{ path('app_person') }}" class="inline-block mb-6 text-blue-600 hover:underline">
            ← Retour à la liste des artistes
        </a>

        <h1 class="text-4xl font-bold mb-8">{{ person.name }}</h1>

        <h2 class="text-2xl font-semibold mb-6">Morceaux interprétés :</h2>

        {% if person.songs|length > 0 %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for song in person.songs %}
                    <div class="bg-white rounded-xl shadow-md p-6 hover:bg-gray-50 transition">
                        <h3 class="text-xl font-bold mb-2">{{ song.title }}</h3>

                        <div class="text-gray-600 text-sm">
                            {% set otherArtists = song.person|filter(a => a.id != person.id) %}

                            {% if otherArtists|length > 0 %}
                                Avec
                                {% for artist in otherArtists %}
                                    <a href="{{ path('app_person_show', {id: artist.id}) }}" class="text-blue-500 hover:underline">
                                        {{ artist.name }}
                                    </a>{% if not loop.last %}, {% endif %}
                                {% endfor %}
                            {% else %}
                                <span class="italic text-gray-400">(Artiste solo)</span>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-gray-600 italic">Aucun morceau trouvé pour cet artiste.</p>
        {% endif %}

    </div>
{% endblock %}
