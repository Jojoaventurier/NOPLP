{% extends 'base.html.twig' %}

{% block title %}Ajouter un morceau{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto p-6 bg-white shadow-lg rounded-lg">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">Ajouter un morceau</h1>

        {{ form_start(form, { attr: { class: 'space-y-6' } }) }}
        <div class="grid gap-4">
            {% for field in [form.title, form.lyrics, form.person, form.userSongKnowledge] %}
                <div>
                    {{ form_label(field, null, { attr: { class: 'block text-sm font-semibold text-gray-700' } }) }}
                    {{ form_widget(field, { attr: { class: 'mt-1 w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500' } }) }}
                    {{ form_errors(field, { attr: { class: 'text-red-500 text-sm' } }) }}
                </div>
            {% endfor %}
    
            {% for field in [form.isDuo, form.isDownloaded, form.hasLyrics] %}
                <div class="flex items-center gap-2">
                    {{ form_widget(field, { attr: { class: 'rounded text-blue-600 focus:ring-blue-500' } }) }}
                    {{ form_label(field, null, { attr: { class: 'text-sm text-gray-700' } }) }}
                    {{ form_errors(field, { attr: { class: 'text-red-500 text-sm' } }) }}
                </div>
            {% endfor %}
        </div>
    
    {{ form_end(form) }}
    </div>
{% endblock %}