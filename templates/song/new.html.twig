{% extends 'base.html.twig' %}

{% block title %}Ajouter un morceau{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto p-6 bg-white shadow-lg rounded-lg">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">Ajouter un morceau</h1>

        {{ form_start(form, { attr: { class: 'space-y-6' } }) }}
        <div class="grid gap-4">
            {% for field in [form.title, form.person, form.newPerson, form.userSongKnowledge] %}
                <div>
                    {{ form_label(field, null, { attr: { class: 'block text-sm font-semibold text-gray-700' } }) }}
                    {{ form_widget(field, { attr: { class: 'mt-1 w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500' } }) }}
                    {% if field.vars.errors|length > 0 %}
                        <p class="text-red-500 text-sm">{{ form_errors(field) }}</p>
                    {% endif %}
                </div>
            {% endfor %}
    
            {% for field in [form.isDownloaded] %}
                <div class="flex items-center gap-2">
                    {{ form_widget(field, { attr: { class: 'peer hidden' } }) }}
                    <label for="{{ field.vars.id }}" class="cursor-pointer text-sm text-gray-700 peer-checked:text-blue-600">
                        {{ field.vars.label }}
                    </label>
                    {% if field.vars.errors|length > 0 %}
                        <p class="text-red-500 text-sm">{{ form_errors(field) }}</p>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    
        {{ form_end(form) }}
    </div>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    
    <script>
        $(document).ready(function () {
            $('.artist-search').select2({
                ajax: {
                    url: '{{ path("app_person_search") }}',  // Assure-toi que cette route existe
                    dataType: 'json',
                    delay: 250,
                    data: function (params) {
                        return { q: params.term };
                    },
                    processResults: function (data) {
                        return {
                            results: data.map(function (person) {
                                return { id: person.id, text: person.name };
                            })
                        };
                    }
                },
                placeholder: $(this).data('placeholder'),
                allowClear: true,
                minimumInputLength: 2
            });
        });
    </script>
{% endblock %}