{% extends 'base.html.twig' %}

{% block title %}Modifier un morceau{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto p-6 bg-white shadow-lg rounded-lg">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">Modifier {{ song.title }}</h1>

        {{ form_start(form, { attr: { class: 'space-y-6' } }) }}
        <div class="grid gap-4">
            {{ form_row(form.title) }}

            <div>
                <label class="block text-sm font-semibold text-gray-700">Interprètes</label>
                {{ form_widget(form.person, { attr: { id: form.person.vars.id, class: 'artist-search' } }) }}
            </div>

            <div id="newPersonContainer" class="hidden">
                {{ form_row(form.newPerson, { attr: { id: form.newPerson.vars.id } }) }}
            </div>

            <button type="button" id="toggleNewArtist" class="px-4 py-2 bg-blue-500 text-white rounded">
                Ajouter un nouvel interprète
            </button>

            {{ form_row(form.userSongKnowledge) }}
            {{ form_row(form.isDownloaded) }}
        </div>

        <div class="mt-6">
            <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition">
                Mettre à jour
            </button>
        </div>
        {{ form_end(form) }}
    </div>

    <script>
    document.addEventListener("DOMContentLoaded", function () {
        const toggleButton = document.getElementById("toggleNewArtist");
        const newPersonContainer = document.getElementById("newPersonContainer");

        toggleButton.addEventListener("click", function () {
            if (newPersonContainer.classList.contains("hidden")) {
                newPersonContainer.classList.remove("hidden");
                toggleButton.textContent = "Réutiliser un interprète existant";
            } else {
                newPersonContainer.classList.add("hidden");
                toggleButton.textContent = "Ajouter un nouvel interprète";
            }
        });
    });
    </script>
{% endblock %}